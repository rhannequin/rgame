<header>
  <% unless controller_name.in? %w[sessions users] %>
    <% if signed_in? %>
      Signed in as: <%= current_user.email %>
      <%= button_to t("application.header.sign_out"), sign_out_path, method: :delete, class: "text-blue-800 underline hover:no-underline" %>
    <% else %>
      <%= link_to t("application.header.sign_in"), sign_in_path, class: "text-blue-800 underline hover:no-underline" %>
    <% end %>
  <% end %>
</header>
