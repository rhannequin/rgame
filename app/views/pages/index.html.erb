<% if signed_in? %>
  <div class="mt-10 flex justify-center space-x-6 text-center">
    <% current_user.planets.each do |planet| %>
      <div class="inline-block mt-4">
        <%= image_tag "pluto.png", class: "inline-block w-40" %>
        <h3 class="text-2xl"><%= t("planets.homeworld") %></h3>
        <h4 class="text-xl"><%= Planet.human_attribute_name(:metal) %></h4>
        <p><%= planet.metal %></p>
      </div>
    <% end %>
  </div>
<% end %>
